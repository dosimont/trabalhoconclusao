<?xml version='1.0'?>
<!DOCTYPE platform SYSTEM "http://simgrid.gforge.inria.fr/simgrid.dtd">
<platform version="3">
<AS  id="AS_small"  routing="Full">
     <host id="host0" power="$POWER$" core="$CORES$"/>
     <host id="host1" power="$POWER$" core="$CORES$"/>
     <link id="link0" bandwidth="$BANDWIDTH$" latency="$LATENCY$" sharing_policy="FATPIPE"/>
     <route src="host0" dst="host1"><link_ctn id="link0"/></route>
</AS>
</platform>

